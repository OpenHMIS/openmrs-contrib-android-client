<resources>

	<style name="AppThemeOrig" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/primary</item>
		<item name="android:textColor">@color/dark_purple</item>
		<item name="actionModeStyle">@style/LongPress</item>
	</style>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:textColorHint">@color/dark_grey</item>
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item> <!-- For 2.x version  -->
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_primary</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">@dimen/default_text_size</item>
	</style>

	<style name="textInputLayoutHintColor" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
	</style>

	<style name="ToggleSwitchTheme" parent="ThemeOverlay.AppCompat.Light">
		<item name="colorAccent">@color/switchcolor</item>
	</style>

	<style name="LongPress" parent="@style/Widget.AppCompat.ActionMode">
		<item name="background">@color/primary_dark</item>
		<item name="actionMenuTextColor">@android:color/white</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="actionBarTheme">@style/BandaHealth.ActionBarTheme</item>
		<item name="colorControlNormal">@android:color/white</item>
	</style>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">@dimen/toolbar_text_size</item>
	</style>

	<style name="TextLabel" parent="">
		<item name="android:textSize">@dimen/default_text_size</item>
	</style>

	<style name="DialogLabelBorderless">
		<item name="android:background">@color/color_primary_dark</item>
		<item name="android:textSize">22sp</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="TextLabel.Bold">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Divider">
		<item name="android:background">?android:attr/listDivider</item>
	</style>

	<style name="Divider.Vertical">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">?android:attr/listDivider</item>
	</style>

	<style name="Divider.Horizontal">
		<item name="android:layout_width">1dp</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

	<style name="Divider.Horizontal.DarkGray">
		<item name="android:layout_width">1dp</item>
		<item name="android:layout_height">55dp</item>
		<item name="android:background">@color/dark_grey</item>
	</style>

	<style name="Divider.Vertical.NoStickyEdges">
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>

	<style name="BandaHealth.TabsTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="colorPrimaryDark">#4ec07e</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="BandaHealth.ThemeOverlay.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_primary</item>
		<item name="android:background">@color/color_primary</item>
	</style>

	<style name="BackgroundThemeEEE">
		<item name="android:background">#EEE</item>
	</style>

	<style name="Widget.Spinner" parent="Widget.AppCompat.Spinner.Underlined">

	</style>

	<style name="BandaHealth.Theme.Light.TransparentActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@android:color/transparent</item>
		<item name="progressBarStyle">@style/ProgressBar.Openmrs</item>
	</style>

	<style name="BandaHealth.Theme.Dark.TransparentActionBar" parent="Theme.AppCompat">
		<item name="colorPrimary">@android:color/transparent</item>
		<item name="progressBarStyle">@style/ProgressBar.Openmrs</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="actionBarTheme">@style/BandaHealth.ActionBarTheme</item>
		<item name="colorControlNormal">@android:color/white</item>
	</style>

	<style name="BandaHealth.ActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
		<!-- THIS is where you can color the arrow! -->
		<item name="colorControlNormal">@android:color/white</item>
	</style>

</resources>
