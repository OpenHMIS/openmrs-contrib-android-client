<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
	
	<FrameLayout
			android:id="@+id/patientHeader"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	
	<LinearLayout
			android:id="@+id/addTaskLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:background="@drawable/card"
			android:orientation="vertical">
		
		<android.support.design.widget.TextInputLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			
			<AutoCompleteTextView
					android:id="@+id/addVisitTasks"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_marginBottom="5dp"
					android:hint="@string/visit_tasks_dialog_message"
					android:drawableEnd="@drawable/ic_send_black"
					android:drawableRight="@drawable/ic_send_black"
					android:drawableTint="@color/color_primary" />
		</android.support.design.widget.TextInputLayout>
	</LinearLayout>
	
	<android.support.v7.widget.CardView
			android:id="@+id/visitTasks"
			android:layout_margin="10dp"
			card_view:cardBackgroundColor="@color/white"
			card_view:cardCornerRadius="4dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		
		<LinearLayout
				android:layout_marginBottom="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			
			<TextView
					android:id="@+id/visitTasksLabel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="10dp"
					android:layout_marginStart="10dp"
					android:layout_marginBottom="5dp"
					android:textStyle="bold"
					android:text="@string/nav_visit_tasks" />
			
			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@android:color/darker_gray" />
			
			<TextView
					android:id="@+id/noVisitTasks"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="10dp"
					android:layout_marginStart="10dp"
					android:visibility="gone"
					android:layout_marginBottom="5dp"
					android:text="@string/no_visit_tasks"/>
			
			<android.support.v7.widget.RecyclerView
					android:id="@+id/visitTasksRecyclerView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="10dp"
					android:layout_marginStart="10dp"
					android:layout_marginBottom="5dp"
					android:layout_marginRight="10dp"
					android:layout_marginEnd="10dp"
					android:layout_gravity="start|bottom">
			
			</android.support.v7.widget.RecyclerView>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>