						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginTop="20dp"
						android:weightSum="2">
					
					<AutoCompleteTextView
							android:id="@+id/county"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:focusable="true"
							android:imeOptions="actionNext"
							android:hint="@string/county"
							android:inputType="textCapSentences"
							android:maxLines="1"
							android:textSize="14sp" />
					
					<TextView
							android:id="@+id/countyError"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="12dp"
							android:layout_marginStart="12dp"
							android:padding="2dp"
							android:text="@string/emptyerror"
							android:textColor="@color/red"
							android:textSize="14sp"
							android:textStyle="bold"
							android:visibility="gone" />
					
					<AutoCompleteTextView
							android:id="@+id/sub_county"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:focusable="true"
							android:imeOptions="actionNext"
							android:hint="@string/sub_county"
							android:inputType="textCapSentences"
							android:maxLines="1"
							android:textSize="14sp" />
					
					<TextView
							android:id="@+id/sub_countError"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="12dp"
							android:layout_marginStart="12dp"
							android:padding="2dp"
							android:text="@string/emptyerror"
							android:textColor="@color/red"
							android:textSize="14sp"
							android:textStyle="bold"
							android:visibility="gone" />
				</LinearLayout>
				
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginTop="20dp"
						android:weightSum="2">
					
					
					<TextView
							android:id="@+id/nationalityError"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="12dp"
							android:layout_marginStart="12dp"
							android:padding="2dp"
							android:text="@string/emptyerror"
							android:textColor="@color/red"
							android:textSize="14sp"
							android:textStyle="bold"
							android:visibility="gone" />
					
					
					<EditText
							android:id="@+id/nationality"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:focusable="true"
							android:imeOptions="actionNext"
							android:hint="@string/reg_nationality"
							android:inputType="textCapWords"
							android:maxLines="1"
							android:textSize="14sp" />
					
					
					<TextView
							android:id="@+id/patient_id_noError"
							android:layout_width="wrap_content"
