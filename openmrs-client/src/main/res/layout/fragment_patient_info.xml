						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp">
					
					<RadioButton
							android:id="@+id/male"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/male" />
					
					<RadioButton
							android:id="@+id/female"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/female" />
				
				</RadioGroup>
				
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="12dp"
						android:layout_marginStart="12dp"
						android:layout_marginTop="20dp"
						android:text="@string/reg_ques_dob"
						android:textColor="#555"
						android:textSize="18sp"
						android:textStyle="bold" />
				
				<TextView
						android:id="@+id/doberror"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="12dp"
						android:layout_marginStart="12dp"
						android:padding="2dp"
						android:text="@string/emptyerror"
						android:textColor="@color/red"
						android:textSize="14sp"
						android:textStyle="bold"
						android:visibility="gone" />
				
				<EditText
						android:id="@+id/dob"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:focusable="false"
						android:nextFocusDown="@+id/estyr"
						android:imeOptions="actionNext"
						android:hint="@string/dob_hint"
						android:inputType="text"
						android:maxLines="1"
						android:textSize="14sp" />
				
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp"
						android:text="@string/label_or"
						android:textColor="#777"
						android:textSize="18sp"
						android:textStyle="bold" />
				
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="20dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:weightSum="2">
					
					<EditText
							android:id="@+id/estyr"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:focusable="true"
							android:imeOptions="actionNext"
							android:hint="@string/estyr"
							android:inputType="number"
							android:maxLines="1"
							android:textSize="14sp" />
					
					<EditText
							android:id="@+id/estmonth"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:focusable="true"
							android:imeOptions="actionNext"
							android:hint="@string/estmonth"
							android:inputType="number"
							android:maxLines="1"
							android:textSize="14sp" />
				
				</LinearLayout>
				
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="12dp"
						android:layout_marginStart="12dp"
						android:layout_marginTop="20dp"
						android:text="@string/reg_civil_status"
						android:textColor="#555"
						android:textSize="18sp"
						android:textStyle="bold" />
				
				<TextView
						android:id="@+id/civilStatusError"
