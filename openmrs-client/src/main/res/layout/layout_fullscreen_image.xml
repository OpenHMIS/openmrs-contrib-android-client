<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:orientation="vertical"
			android:background="@drawable/nav_footer_border_top"
			android:gravity="bottom"
			android:layout_alignParentBottom="true"
			android:minHeight="@dimen/avatar_size">

		<TextView
				android:id="@+id/photoDetails"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="left|center"
				android:paddingLeft="@dimen/labels_text_size"
				android:paddingBottom="@dimen/labels_text_size"
				android:paddingTop="@dimen/labels_text_size"/>
	</LinearLayout>

	<org.openmrs.mobile.widget.TouchImageView
			android:id="@+id/imageDisplay"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitCenter"/>

</RelativeLayout>