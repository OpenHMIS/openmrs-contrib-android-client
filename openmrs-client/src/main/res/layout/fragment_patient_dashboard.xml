<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    fab:layout_collapseParallaxMultiplier="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/patientDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/patient_card_margin"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:gravity="start"
                    android:text="@string/label_given_name"
                    android:textColor="@color/openmrs_color_grey"
                    android:textSize="@dimen/h1_label" />

                <TextView
                    android:gravity="start"
                    android:text="@string/label_middle_name"
                    android:textColor="@color/openmrs_color_grey"
                    android:textSize="@dimen/h1_label" />

                <TextView
                    android:gravity="start"
                    android:text="@string/label_family_name"
                    android:textColor="@color/openmrs_color_grey"
                    android:textSize="@dimen/h1_label" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/given_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/label_given_name"
                    android:textColor="@color/openmrs_color_green"
                    android:textSize="@dimen/h1" />

                <TextView
                    android:id="@+id/middle_name"
                    android:gravity="start"
                    android:text="@string/label_middle_name"
                    android:textColor="@color/openmrs_color_green"
                    android:textSize="@dimen/h1" />

                <TextView
                    android:id="@+id/family_name"
                    android:gravity="start"
                    android:text="@string/label_family_name"
                    android:textColor="@color/openmrs_color_green"
                    android:textSize="@dimen/h1" />
            </TableRow>

            <TableRow>

                <TextView
                    android:gravity="start"
                    android:text="@string/label_gender"
                    android:textColor="@color/openmrs_color_grey"
                    android:textSize="@dimen/h1_label" />


                <TextView
                    android:gravity="start"
                    android:text="@string/label_age"
                    android:textColor="@color/openmrs_color_grey"
                    android:textSize="@dimen/h1_label" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/genderIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start"
                    android:layout_margin="0dp"
                    android:contentDescription="@string/app_name"
                    android:padding="0dp"
                    android:scaleType="fitStart" />


                <TextView
                    android:id="@+id/age"
                    android:gravity="start"
                    android:text="@string/label_age"
                    android:textColor="@color/openmrs_color_green"
                    android:textSize="@dimen/h1" />


            </TableRow>

            <TableRow>

                <TextView
                    android:gravity="start"
                    android:text="@string/label_id"
                    android:textColor="@color/openmrs_color_grey"
                    android:textSize="@dimen/h1_label" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/patient_id"
                    android:gravity="start"
                    android:text="@string/label_id"
                    android:textColor="@color/openmrs_color_green"
                    android:textSize="@dimen/h1" />

                <ImageView
                    android:id="@+id/activeVisitIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start"
                    android:layout_margin="0dp"
                    android:layout_span="2"
                    android:contentDescription="@string/app_name"
                    android:gravity="start"
                    android:padding="0dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_active_visit"
                    android:visibility="gone" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/patient_card_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/visit_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#4ec07e"
                android:gravity="start"
                android:padding="3dip"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/more_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/label_more"
                android:textAlignment="gravity"
                android:textColor="#4ec07e" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/patient_card_margin"
            android:layout_marginRight="@dimen/patient_card_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loadVisitNoteEditor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.8"
                android:contentDescription="@string/app_name"
                android:src="@android:drawable/ic_menu_edit" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.2">

                <EditText
                    android:id="@+id/visit_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:hint="@string/visit_note"
                    android:inputType="none"
                    android:textIsSelectable="false" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/patient_card_margin"
            android:layout_marginRight="@dimen/patient_card_margin"
            android:orientation="vertical"
            android:paddingLeft="60dp">

            <EditText
                android:id="@+id/visit_noted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="@string/visit_note"
                android:inputType="none"
                android:textIsSelectable="false" />

        </LinearLayout>

    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatingActionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        fab:menu_fab_label="@string/label_close"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/start_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_start_visit"
            fab:fab_label="@string/label_add_visit"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/add_diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_start_visit"
            fab:fab_label="@string/label_add_diagnosis"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/im_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_start_visit"
            fab:fab_label="@string/label_im_form"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/visit_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_start_visit"
            fab:fab_label="@string/label_add_image"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/end_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_start_visit"
            fab:fab_label="@string/label_end_visit"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/add_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_start_visit"
            fab:fab_label="@string/label_add_task"
            fab:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>
