<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_height="wrap_content">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<TextView
				android:gravity="start"
				android:layout_gravity="start"
				android:background="@drawable/label_badge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:layout_weight="1"
				android:id="@+id/visitTitle"
				android:textColor="@color/color_white" />

		<TextView
				android:clickable="true"
				android:id="@+id/visitTimeago"
				android:textSize="10sp"
				android:layout_weight="0"
				android:ellipsize="end"
				android:textStyle="italic"
				android:textColor="@color/dark_grey"
				android:maxLines="1"
				android:paddingLeft="10dp"
				android:paddingStart="10dp"
				android:paddingRight="10dp"
				android:paddingEnd="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<View
				android:visibility="gone"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@android:color/darker_gray" />

		<LinearLayout
				android:visibility="gone"
				android:id="@+id/editVisitNoteContainer"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="top"
					android:layout_gravity="top">

				<android.support.design.widget.TextInputEditText
						android:gravity="top"
						android:layout_gravity="top"
						android:layout_width="match_parent"
						android:minLines="4"
						android:hint="@string/visit_note"
						android:layout_height="wrap_content"
						android:scrollbars="vertical"
						android:id="@+id/editVisitNote" />
			</android.support.design.widget.TextInputLayout>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/visitNoteTextContainer"
				android:visibility="gone"
				android:layout_marginTop="10dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

			<TextView
					android:id="@+id/visitNoteTitle"
					android:layout_marginTop="5dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:text="@string/visit_note" />

			<TextView
					android:gravity="top"
					android:layout_gravity="top"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:scrollbars="vertical"
					android:id="@+id/visitNoteText" />

		</LinearLayout>

		<LinearLayout
				android:visibility="gone"
				android:id="@+id/primaryDiagnosisHolder"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_height="wrap_content">

			<TextView
					android:layout_marginTop="5dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:text="@string/primary_diagnosis_label" />

			<TextView
					android:id="@+id/primaryDiagnosis"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/primary_diagnosis_label" />

		</LinearLayout>

		<LinearLayout
				android:visibility="gone"
				android:id="@+id/secondaryDiagnosisHolder"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_height="wrap_content">

			<TextView
					android:textStyle="bold"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/secondary_diagnosis_label" />

			<TextView
					android:id="@+id/secondaryDiagnosis"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/primary_diagnosis_label" />
		</LinearLayout>

	</LinearLayout>

	<TableLayout
			android:visibility="gone"
			android:id="@+id/visitVitalsTable"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/patient_card_margin"
			android:layout_gravity="center"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:stretchColumns="1">

		<TableRow
				android:id="@+id/tableRow1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<TextView
					android:gravity="center"
					android:textStyle="bold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_span="2"
					android:layout_weight="1"
					android:text="@string/label_vitals" />

		</TableRow>

	</TableLayout>


	<LinearLayout
			android:padding="0dp"
			android:layout_margin="0dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:orientation="horizontal">

		<ImageView
				android:id="@+id/loadVisitDetails"
				android:contentDescription="@string/app_name"
				android:src="@drawable/ic_chevron_right_black"
				android:clickable="true"
				android:layout_gravity="end"
				android:gravity="end"
				android:layout_width="25dp"
				android:layout_height="25dp" />

	</LinearLayout>
</LinearLayout>