<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:focusable="true"
		android:focusableInTouchMode="true">
	
	<FrameLayout
			android:id="@+id/patientHeader"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	
	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:orientation="vertical">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			
			<android.support.v7.widget.CardView
					android:id="@+id/visitActiveStatus"
					android:layout_margin="10dp"
					card_view:cardBackgroundColor="@color/white"
					card_view:cardCornerRadius="4dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<LinearLayout
						android:layout_marginBottom="10dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
					
					<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="5dp"
							android:orientation="vertical"
							android:layout_marginBottom="5dp">
						
						<ImageView
								android:id="@+id/activeStatus"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
								android:layout_marginStart="5dp"
								android:layout_marginEnd="5dp"
								android:layout_marginRight="5dp"
								android:src="@drawable/ic_radio_button_checked_black"
								android:tint="@color/color_primary" />
						
						<TextView
								android:id="@+id/visitDates"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="10dp"
								android:layout_marginStart="10dp"
								android:textSize="16sp"
								android:textStyle="bold"
								android:layout_toRightOf="@+id/activeStatus"
								android:layout_toEndOf="@+id/activeStatus" />
					</RelativeLayout>
					
					
					<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="5dp"
							android:orientation="vertical"
							android:layout_marginBottom="5dp">
						
						<TextView
								android:id="@+id/visitTypeLabel"
								android:layout_marginLeft="10dp"
								android:layout_marginStart="10dp"
								android:layout_marginEnd="5dp"
								android:layout_marginRight="5dp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/visit_type"/>
						
						<TextView
								android:id="@+id/visitType"
								android:layout_marginLeft="10dp"
								android:layout_marginStart="10dp"
								android:layout_marginRight="10dp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_toEndOf="@+id/visitTypeLabel"
								android:layout_toRightOf="@+id/visitTypeLabel"/>
					</RelativeLayout>
					
					<View
							android:layout_width="match_parent"
							android:layout_height="1dp"
							android:background="@android:color/darker_gray" />
					
					<com.google.android.flexbox.FlexboxLayout
							android:layout_marginEnd="30dp"
							android:layout_marginLeft="5dp"
							android:layout_marginRight="5dp"
							android:layout_marginStart="10dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							app:alignItems="center"
							app:alignContent="center"
							app:flexDirection="row"
							app:flexWrap="wrap"
							android:layout_marginTop="5dp">
						
						<TextView
								android:id="@+id/bedNumberLabel"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/bed_number" />
						
						<TextView
								android:id="@+id/fetchedBedNumber"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="10dp"
								android:layout_marginRight="30dp" />
						
						<TextView
								android:id="@+id/visitWardLabel"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginEnd="10dp"
								android:layout_marginRight="5dp"
								android:text="@string/reg_ward" />
						
						<TextView
								android:id="@+id/fetchedWard"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginEnd="10dp"
								android:layout_marginRight="10dp" />
					
					</com.google.android.flexbox.FlexboxLayout>
				
				</LinearLayout>
			
			</android.support.v7.widget.CardView>
			
			<android.support.v7.widget.CardView
					android:id="@+id/visitVitals"
					android:layout_margin="10dp"
					card_view:cardBackgroundColor="@color/white"
					card_view:cardCornerRadius="4dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<LinearLayout
						android:layout_marginBottom="10dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
					
					<TextView
							android:id="@+id/visitVitalsLabel"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="5dp"
							android:layout_marginLeft="10dp"
							android:layout_marginStart="10dp"
							android:layout_marginBottom="5dp"
							android:textStyle="bold"
							android:text="@string/patient_scroll_tab_vitals_label" />
					
					<View
							android:layout_width="match_parent"
							android:layout_height="1dp"
							android:background="@android:color/darker_gray" />
					
					<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:padding="@dimen/patient_card_margin"
							android:layout_marginTop="5dp"
							android:layout_marginBottom="5dp"
							android:stretchColumns="1">
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="@dimen/table_rows_margin">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="right"
									android:textStyle="bold"
									android:text="@string/label_height" />
							
							<TextView
									android:id="@+id/vital_height"
									android:layout_column="1"
									android:layout_marginLeft="@dimen/table_columns_margin" />
						
						</TableRow>
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="@dimen/table_rows_margin">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="right"
									android:textStyle="bold"
									android:text="@string/label_weight" />
							
							<TextView
									android:id="@+id/vital_weight"
									android:layout_column="1"
									android:layout_marginLeft="@dimen/table_columns_margin" />
						
						</TableRow>
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="@dimen/table_rows_margin">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="right"
									android:textStyle="bold"
									android:text="@string/label_bmi" />
							
							<TextView
									android:id="@+id/vital_bmi"
									android:layout_column="1"
									android:layout_marginLeft="@dimen/table_columns_margin" />
						
						</TableRow>
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="@dimen/table_rows_margin">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="right"
									android:textStyle="bold"
									android:text="@string/label_temperature" />
							
							<TextView
									android:id="@+id/vital_temperature"
									android:layout_column="1"
									android:layout_marginLeft="@dimen/table_columns_margin" />
						
						</TableRow>
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="@dimen/table_rows_margin">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="right"
									android:textStyle="bold"
									android:text="@string/label_pulse" />
							
							<TextView
									android:id="@+id/vital_pulse"
									android:layout_column="1"
									android:layout_marginLeft="@dimen/table_columns_margin" />
						
						</TableRow>
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="@dimen/table_rows_margin">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="right"
									android:textStyle="bold"
									android:text="@string/label_respiratory_rate" />
							
							<TextView
									android:id="@+id/vital_respiratory_rate"
									android:layout_column="1"
									android:layout_marginLeft="@dimen/table_columns_margin" />
						
						</TableRow>
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="@dimen/table_rows_margin">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="right"
									android:textStyle="bold"
									android:text="@string/label_blood_presure" />
							
							<TextView
									android:id="@+id/vital_blood_pressure"
									android:layout_column="1"
									android:layout_marginLeft="@dimen/table_columns_margin" />
						
						</TableRow>
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="@dimen/table_rows_margin">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="right"
									android:textStyle="bold"
									android:text="@string/label_blood_oxygen_saturation" />
							
							<TextView
									android:id="@+id/vital_bos"
									android:layout_column="1"
									android:layout_marginLeft="@dimen/table_columns_margin" />
						
						</TableRow>
					
					</TableLayout>
				</LinearLayout>
			</android.support.v7.widget.CardView>
			
			<android.support.v7.widget.CardView
					android:id="@+id/visitNote"
					android:layout_margin="10dp"
					card_view:cardBackgroundColor="@color/white"
					card_view:cardCornerRadius="4dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<LinearLayout
						android:layout_marginBottom="10dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
					
					<TextView
							android:id="@+id/visitNoteLabel"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="5dp"
							android:layout_marginLeft="10dp"
							android:layout_marginStart="10dp"
							android:layout_marginBottom="5dp"
							android:textStyle="bold"
							android:text="@string/visit_note" />
					
					<View
							android:layout_width="match_parent"
							android:layout_height="1dp"
							android:background="@android:color/darker_gray" />
					
					<android.support.design.widget.TextInputLayout
							android:layout_marginTop="10dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginBottom="5dp"
							android:layout_marginLeft="5dp"
							android:layout_marginStart="5dp"
							android:layout_marginRight="5dp"
							android:layout_marginEnd="5dp">
						
						<android.support.design.widget.TextInputEditText
								android:layout_marginTop="10dp"
								android:layout_marginBottom="10dp"
								android:id="@+id/clinicalNotes"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
								android:layout_marginStart="5dp"
								android:layout_marginRight="5dp"
								android:layout_marginEnd="5dp"
								android:hint="@string/clinical_notes_label" />
					</android.support.design.widget.TextInputLayout>
					
					<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:padding="@dimen/patient_card_margin"
							android:layout_marginTop="5dp"
							android:layout_marginBottom="5dp"
							android:stretchColumns="1">
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:layout_marginBottom="10dp">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="left"
									android:textStyle="bold"
									android:text="@string/primary_diagnosis_label" />
							
							<TextView
									android:id="@+id/primary_diagnosis"
									android:layout_height="wrap_content"
									android:layout_marginLeft="5dp"
									android:layout_marginStart="5dp"
									android:width="0dip" />
						
						</TableRow>
						
						<TableRow
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:layout_marginBottom="10dp">
							
							<TextView
									android:layout_column="0"
									android:layout_marginRight="@dimen/table_columns_margin"
									android:gravity="left"
									android:textStyle="bold"
									android:text="@string/secondary_diagnosis_label" />
							
							<TextView
									android:id="@+id/secondary_diagnosis"
									android:layout_column="1"
									android:layout_height="wrap_content"
									android:layout_marginLeft="5dp"
									android:layout_marginStart="5dp"
									android:width="0dip" />
						</TableRow>
					</TableLayout>
				</LinearLayout>
			</android.support.v7.widget.CardView>
		
		</LinearLayout>
	
	</ScrollView>
</LinearLayout>